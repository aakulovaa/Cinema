@model Cinema.Models.People

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>People</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TicketSold.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketSold.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dd>
            @if (Model.Sessions != null && Model.Sessions.Any())
            {
                <table class="table">
                    <tr>
                        <th>Session Id</th>
                        <th>Start Time</th>
                    </tr>
                    @foreach (var session in Model.Sessions)
                    {
                        <tr>
                            <td>@session.Id</td>
                            <td>@session.StartDateTime</td>
                            
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No sessions.</p>
            }
        </dd>
    </dl>
</div>
<p>
